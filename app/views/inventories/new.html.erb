<h2 class="mt-4">Add new inventory</h2>

<%= turbo_frame_tag @inventory do %>
  <%= form_with model: @inventory, class: "mt-4" do |form| %>
    <% if @inventory.errors.any? %>
      <div role="alert" class="text-danger">
        <% @inventory.errors.full_messages.each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>
    <% end %>
    <div class="mb-3">
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_area :description, class: "form-control", required: true %>
    </div>

    <%= form.submit "Create", data: { turbo: false }, class: "btn btn-primary Create-button" %>
  <% end %>
<% end %>
