<p class="text-success"><%= notice %></p>

<%= render @food %>

<div class="mt-4">
  <%= link_to "Edit this food", edit_food_path(@food), class: "btn btn-primary me-2" %>
  <%= link_to "Back to foods", foods_path, class: "btn btn-secondary me-2" %>
  <%= button_to "Destroy this food", @food, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
</div>
